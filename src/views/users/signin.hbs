<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Iniciar sesion</h1>
            </div>
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Correo electronico" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <a href="/users/signup" style="font-size: small;"> ¿No tienes cuenta? Registrate aquí</a>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                    </div>
                    <div class="form-group">
                        <a href="/instrumentosLogout" class="btn btn-danger btn-block"> Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
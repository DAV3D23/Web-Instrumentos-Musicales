<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 style="text-align: center;">Nuevo instrumento</h3>
        </div>
        <div class="card-body">
            <form action="/instrumentos/nuevoInstrumento" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Inserta el nombre del instrumento" autofocus>
                </div>
                
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripcion del instrumento"></textarea>
                </div>

                <div class="form-group">
                    <input type="text" name="precio" class="form-control" placeholder="Inserta el precio">
                </div>

                <div class="form-group">
                    <input type="text" name="imagenUrl" class="form-control" placeholder="Url de imagen">
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Agregar</button> 
                </div>
                <div class="form-group">
                    <a href="/instrumentos" class="btn btn-danger btn-block"> Cancelar</a>
                </div>
                
            </form> 
        </div>
    </div>
</div>